<div class="container">
  <div class="row">

<% for(let i = 0; i < item.length; i++) { %>
       <div class="card col-3">
         <div class="card-body">
           <h5 class="card-title"><b>Food: </b><%= item[i].food %></h5>
             <p class="card-text"><b>Type: </b><%= item[i].type %></p>
             <p class="card-text"><b>Allergy: </b><%= item[i].allergy %></p>
             <p class="card-text"><b>Quantity: </b><%= item[i].quantity %></p>
           </div>
           <div class="card-footer" >
             <small class="text-body-secondary"><a href="/admin/quantity/<%= item[i]._id%>/1" class="btn btn-primary update" name=<%= item[i].quantity%>>+</a></small>
             
             <small class="text-body-secondary"><a href="/admin/quantity/<%=item[i]._id%>/-1" class="btn btn-primary delete" name=<%= item[i].quantity%>>-</a></small>

           </div>
         </div>
  <% } %>
